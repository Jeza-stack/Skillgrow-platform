    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.querySelector('.nav-links').classList.toggle('active');
        });
        
        // Demo glossary hover effect
        const highlightedWords = document.querySelectorAll('.highlighted-word');
        highlightedWords.forEach(word => {
            word.addEventListener('mouseenter', function() {
                this.style.textDecoration = 'underline';
            });
            
            word.addEventListener('mouseleave', function() {
                this.style.textDecoration = 'none';
            });
        });
        
        // Quiz functionality
        const quizOptions = document.querySelectorAll('.quiz-option');
        quizOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Remove any existing active classes
                quizOptions.forEach(opt => opt.classList.remove('correct', 'incorrect'));
                
                // Add appropriate class
                if (this.classList.contains('correct')) {
                    this.classList.add('correct');
                } else {
                    this.classList.add('incorrect');
                }
                
                // Show explanation if available
                const explanation = this.closest('.quiz-question').querySelector('.quiz-explanation');
                if (explanation) {
                    explanation.style.display = 'block';
                }
            });
        });
        
        // Simulate audio controls
        const audioBtns = document.querySelectorAll('.audio-btn');
        audioBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('fa-play')) {
                    icon.classList.remove('fa-play');
                    icon.classList.add('fa-pause');
                } else if (icon.classList.contains('fa-pause')) {
                    icon.classList.remove('fa-pause');
                    icon.classList.add('fa-play');
                }
            });
        });
        
        // Speed control display
        const speedControl = document.querySelector('.speed-control input');
        const speedValue = document.querySelector('.speed-control span');
        speedControl.addEventListener('input', function() {
            speedValue.textContent = this.value + 'x';
        });
    </script>
</body>
</html>
